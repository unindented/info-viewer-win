//
// String Table
//

STRINGTABLE
BEGIN
    IDC_MAIN        "MAIN"
END

STRINGTABLE
BEGIN
    IDS_APP_TITLE   "iNFO"
    IDS_NFO_NAME    "iNFO.NFO"
    IDS_NFO_DESC    "NFO File"
    IDS_DIZ_NAME    "iNFO.DIZ"
    IDS_DIZ_DESC    "DIZ File"
    IDS_FILTER      "NFO & DIZ Files (*.nfo; *.diz)|*.nfo;*.diz|All Files (*.*)|*.*|"
END

/////////////////////////////////////////////////////////////////////////////
//
// Version
//

VS_VERSION_INFO VERSIONINFO
 FILEVERSION 1,0,0,1
 PRODUCTVERSION 1,0,0,1
 FILEFLAGSMASK 0x3fL
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS 0x4L
 FILETYPE 0x1L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "000904b0"
        BEGIN
            VALUE "Comments", "\0"
            VALUE "CompanyName", "\0"
            VALUE "FileDescription", "iNFO\0"
            VALUE "FileVersion", "1, 0, 0, 1\0"
            VALUE "InternalName", "info\0"
            VALUE "LegalCopyright", "Copyright (C) 2005\0"
            VALUE "OriginalFilename", "info.exe\0"
            VALUE "ProductName", "iNFO\0"
            VALUE "ProductVersion", "1, 0, 0, 1\0"
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x009, 1200
    END
END
